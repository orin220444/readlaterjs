{ "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    "target": "ESNEXT",    
    "module": "ESnext",   
     "declaration": true,
    "outDir": "../dist",
    "rootDir": "./",   
     "removeComments": true, 
    "declarationDir": "typings/",
    "strict": false,        
    "moduleResolution": "node", 
    "esModuleInterop": true,   
    "skipLibCheck": true,     
    "forceConsistentCasingInFileNames": true 
  },
  "typedocOptions": {
         "inputFiles": ["./src"],
        "mode": "modules",
        "out": "docs"
    }
}
